<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Transparent inside -->
    <solid android:color="@android:color/transparent" />

    <!-- Gradient Border -->
    <stroke
        android:width="4dp"
        android:color="@android:color/transparent" />

    <corners android:radius="12dp" />

    <!-- Layer-list trick for stroke gradient (via background drawable) won't work here,
         so we will use a GradientDrawable programmatically in Kotlin -->
</shape>
