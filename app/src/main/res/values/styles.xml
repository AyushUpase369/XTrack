<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ModernRadioButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/orbitron_medium</item>
        <item name="android:buttonTint">@color/LGreen</item>
    </style>

    <style name="DatePickerSpinner" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/white</item> <!-- Set spinner text color -->
        <item name="fontFamily">@font/orbitron_extrabold</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textColorSecondary">@color/white</item> <!-- Set secondary text color (optional) -->
        <item name="android:editTextColor">@color/white</item> <!-- For spinner's internal EditTexts -->
    </style>

    <style name="MaterialAlertDialog_Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceMediumComponent">@style/RoundedDialogShape</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RoundedDialogShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.XTrack.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- No system splash icon -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@null</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@null</item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="31">@null</item>

        <!-- Your custom layout background (optional) -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Optional: disable the transition -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>



</resources>