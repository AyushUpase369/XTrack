<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/popup_background"
    android:elevation="8dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/closeIcon"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentEnd="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_centerVertical="true" />

        <!-- Title -->
        <TextView
            android:text="Filter Workouts"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/orbitron_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!-- Card: Time Range Filter -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#1E1E1E">

            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Time Range"
                    android:textStyle="bold"
                    android:textColor="@color/LGreen"
                    android:textSize="15sp"
                    android:fontFamily="@font/orbitron_regular"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/timeFilterGroup"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/last7DaysOption" android:text="Last 7 Days" style="@style/ModernRadioButton" />
                    <RadioButton android:id="@+id/monthsOption" android:text="Months" style="@style/ModernRadioButton" />
                    <RadioButton android:id="@+id/allTimeOption" android:text="All Time" style="@style/ModernRadioButton" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Exercise Filters -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#1E1E1E">

            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Exercise Category"
                    android:textStyle="bold"
                    android:textColor="@color/LGreen"
                    android:textSize="15sp"
                    android:fontFamily="@font/orbitron_regular"
                    android:layout_marginBottom="6dp"
                    android:layout_height="30dp"
                    android:layout_width="200dp"/>

                <Spinner
                    android:id="@+id/exerciseCategorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_background"
                    />

                <TextView
                    android:text="Specific Exercise"
                    android:textStyle="bold"
                    android:textColor="@color/LGreen"
                    android:fontFamily="@font/orbitron_regular"
                    android:textSize="15sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="30dp"
                    android:layout_width="200dp"/>

                <Spinner
                    android:id="@+id/subExerciseSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Metric Filter -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#1E1E1E">

            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Metric"
                    android:textStyle="bold"
                    android:textColor="@color/LGreen"
                    android:textSize="15sp"
                    android:fontFamily="@font/orbitron_regular"
                    android:layout_marginBottom="8dp"
                    android:layout_height="30dp"
                    android:layout_width="200dp"/>

                <RadioGroup
                    android:id="@+id/metricGroup"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/performanceOption" android:text="Performance" style="@style/ModernRadioButton" />
                    <RadioButton android:id="@+id/strengthOption" android:text="Strength" style="@style/ModernRadioButton" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Apply Button -->
        <Button
            android:id="@+id/applyFilterButton"
            android:text="Apply Filters"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17sp"
            android:background="@drawable/spinner_background"
            android:fontFamily="@font/orbitron_extrabold"
            app:cornerRadius="24dp"
            android:backgroundTint="@color/LGreen"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
