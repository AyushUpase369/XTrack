<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background"
    android:gravity="center">

    <ImageView
        android:id="@+id/deleteIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/deleteforever"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Delete Icon" />

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Workout"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/orbitron_medium"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete this workout?"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:fontFamily="@font/orbitron_medium"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:fontFamily="@font/orbitron_medium"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray" />

        <Space android:layout_width="16dp" android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:fontFamily="@font/orbitron_medium"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/error" />
    </LinearLayout>
</LinearLayout>
